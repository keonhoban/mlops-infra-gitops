extends: default

ignore: |
  charts/**/templates/**          # Helm templates는 YAML 아님 → 제외
  charts/**/charts/**             # vendor tgz, 서브차트 등
  envs/**/sealed-secrets/**       # base64/긴 라인/포맷 다양 → 제외
  bootstrap/notifications/secret-sealed.yaml

rules:
  # Helm/inline map 때문에 터지는 규칙 완화
  braces: disable                 # { a: b } 형태 스페이싱 검사 끔
  line-length: disable            # base64/주석 긴 라인 허용
  document-start: disable         # '---' 강제 끔
  truthy:
    level: warning                # yes/no/on/off는 경고만
  comments-indentation: disable   # 주석 들여쓰기 관대하게

  # 나머지는 지키자(가독성용)
  trailing-spaces:
    level: error
  colons:
    max-spaces-after: 1           # 콜론 뒤 공백 1칸
